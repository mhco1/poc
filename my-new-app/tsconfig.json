{
  "compilerOptions": {
    "target": "ES2022",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "*": ["./node_modules/*"],
      "~/*": ["./src/backend/*"],
      "tools/*": ["./src/backend/tools/*"],
    }
  },
  "include": ["src/**/*"]
}
